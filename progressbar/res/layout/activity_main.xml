<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyman = "http://schemas.android.com/apk/res/com.example.progressbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
         <com.cultraview.view.HorizontalprograssbarAndprograss
            android:id="@+id/id_progress01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="0"
            android:layout_marginTop="50dp"
            android:padding="15dp" 
            android:background="#44808080"
            hyman:progress_text_color="#44ff0000" 
            hyman:progress_unreach_color="#ff000000"        
            />
         <com.cultraview.view.HorizontalprograssbarAndprograss 
             android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="30"
            android:padding="10dp"
            android:layout_marginTop="50dp"
            hyman:progress_text_color="#44ff0000" 
            hyman:progress_unreach_color="#ff000000"
             android:background="#44808080"        
            />
          <com.cultraview.view.HorizontalprograssbarAndprograss 
             android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="0"
            android:layout_marginTop="50dp"
            android:padding="10dp" 
            hyman:progress_text_color="#44ff0000" 
            hyman:progress_unreach_color="#ff000000"        
            />
           <com.cultraview.view.HorizontalprograssbarAndprograss 
             android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="50"
            android:layout_marginTop="50dp"
            android:padding="10dp" 
            hyman:progress_text_color="#44ff0000" 
            hyman:progress_unreach_color="#ff000000"        
            />
           
                                        
            <com.cultraview.view.RoundProgressBarWithProgress 
                android:id="@+id/id_progress02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            hyman:radius="20dp"
            android:progress="0"
            android:layout_marginTop="30dp"
            android:padding="10dp" 
            hyman:progress_text_color="#44ff0000" 
            hyman:progress_unreach_color="#ff000000"        
            />
            
             <com.cultraview.view.RoundProgressBarWithProgress 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            hyman:radius="50dp"
            android:progress="50"
            android:layout_marginTop="30dp"
            android:padding="10dp" 
            hyman:progress_text_color="#44ff0000" 
            hyman:progress_unreach_color="#ff000000"        
            />
    </LinearLayout>

</ScrollView>
